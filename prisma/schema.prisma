generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  password  String
  firstName String
  lastName  String
  email     String    @unique
  admin     Admin?
  features  Feature[]
  surveyor  Surveyor?
}

model Surveyor {
  id          Int          @id 
  user        User         @relation(fields: [id], references: [id], onDelete: Cascade)
  assignments Assignment[]
  admins      Admin[]
}

model Admin {
  id        Int        @id
  user      User       @relation(fields: [id], references: [id], onDelete: Cascade)
  layers    Layer[]
  surveys   Survey[]
  surveyors Surveyor[]
}

model Assignment {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  completed   Boolean   @default(false)
  completedAt DateTime? @updatedAt
  results     Json?
  assigneeId  Int?
  featureId   Int       @unique
  surveyId    Int
  assignee    Surveyor? @relation(fields: [assigneeId], references: [id], onDelete: Cascade)
  feature     Feature   @relation(fields: [featureId], references: [id], onDelete: Cascade)
  survey      Survey    @relation(fields: [surveyId], references: [id], onDelete: Cascade)
}

model Survey {
  id          Int          @id @default(autoincrement())
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  name        String
  json        Json
  assignments Assignment[]
  layers      Layer[]
  admins      Admin[]
}

model Layer {
  id              Int       @id @default(autoincrement())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  name            String    @unique
  labelField      String?
  defaultSurveyId Int?
  defaultSurvey   Survey?   @relation(fields: [defaultSurveyId], references: [id])
  features        Feature[]
  admins          Admin[]
}

model Feature {
  id           Int         @id @default(autoincrement())
  createdAt    DateTime    @default(now())
  layerId      Int
  creatorId    Int?
  geojson      Json
  assignmentId Int?        @unique
  creator      User?       @relation(fields: [creatorId], references: [id])
  layer        Layer       @relation(fields: [layerId], references: [id], onDelete: Cascade)
  assignment   Assignment?
}

enum Role {
  USER
  ADMIN
}
